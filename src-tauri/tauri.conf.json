{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PhiZone Player",
  "version": "0.1.2",
  "identifier": "cn.phizone.player",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:9900",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build:only"
  },
  "app": {
    "windows": [
      {
        "title": "PhiZone Player",
        "width": 1200,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "fileAssociations": [
      {
        "ext": ["pez"],
        "name": "RPE Chart Bundle",
        "description": "RPE Chart Bundle",
        "role": "Viewer"
      },
      {
        "ext": ["zip"],
        "name": "ZIP Bundle",
        "description": "ZIP Bundle",
        "role": "Viewer"
      }
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["phizone-player"]
      }
    },
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}
